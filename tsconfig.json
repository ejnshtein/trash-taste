{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@type/*": ["src/type/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}